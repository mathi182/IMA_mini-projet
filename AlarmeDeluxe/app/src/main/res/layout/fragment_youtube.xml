<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.ulaval.ima.mp.alarmedeluxe.customization.YoutubeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/connection_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Log out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_out_button"
            android:visibility="gone"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/sign_in_button"
            android:layout_toEndOf="@+id/sign_in_button" />

        <TextView
            android:id="@+id/currentRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sign_in_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:text="unknown" />

        <Button
            android:text="Like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLike"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/lblCurrentRating"
            android:layout_alignStart="@+id/lblCurrentRating"
            android:layout_marginBottom="68dp" />

        <Button
            android:text="Dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDislike"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignBaseline="@+id/btnLike"
            android:layout_alignBottom="@+id/btnLike"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</FrameLayout>